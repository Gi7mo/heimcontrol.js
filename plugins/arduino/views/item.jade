each item in items
	div.plugin-container.arduino(class=item.method)
		- if (item.method == 'rcswitch')
			p.description
				span.text-muted RC Switch:&nbsp;
				strong #{item.description} 
			div.btn-group(data-rcswitch="buttons-radio")
				button.btn.btn-default.btn-lg.socket(type="button", data-socket="arduino-rcswitch", data-value="1", data-id="#{item._id}", class=(item.value == 1 ? 'active' : ''))
					i.fa.fa-circle
					| On
				button.btn.btn-inverse.btn-lg.socket(type="button", data-socket="arduino-rcswitch", data-value="0", data-id="#{item._id}", class=(item.value == 0 ? 'active' : '')) 
					i.fa.fa-circle-o
					| Off
		- if (item.method == 'itrcswitch')
			p.description
				span.text-muted IT RC Switch:&nbsp;
				strong #{item.description} 
			div.btn-group(data-rcswitch="buttons-radio")
				button.btn.btn-default.btn-lg.socket(type="button", data-socket="arduino-itrcswitch", data-value="1", data-id="#{item._id}", class=(item.value == 1 ? 'active' : ''))
					i.fa.fa-circle
					| On
				button.btn.btn-inverse.btn-lg.socket(type="button", data-socket="arduino-itrcswitch", data-value="0", data-id="#{item._id}", class=(item.value == 0 ? 'active' : '')) 
					i.fa.fa-circle-o
					| Off
		- if (item.method == 'sensor')
			p.description
				strong #{item.description}&nbsp; 
				span.text-muted PIN #{item.pin} 
				- if (item.graph)
					a.show-graph-overlay.fa.fa-bar-chart-o(alt="Show Graph", data-url="/api/arduino/get?type=graph&sensor=" + item._id)
			div.large
				p
					span.value(data-id="#{item._id}") #{item.value}
					| &nbsp;#{item.unit}
		- if (item.method == 'irremote')
			div
				button.btn.btn-default.btn-lg.socket(type="button", data-socket="arduino-irremote", data-value="1", data-id="#{item._id}")
					i.icon-certificate
					- if (item.description!='')
						| #{item.description}
					else
						| Send
		- if (item.method == 'led')
			p.description
				span.text-muted LED:&nbsp;
				strong #{item.description} 
			div.btn-group(data-led="buttons-radio")
				button.btn.btn-default.btn-lg.socket(type="button", data-socket="arduino-led", data-value="1", data-id="#{item._id}", class=(item.value == 1 ? 'active' : ''))
					i.fa.fa-circle
					| On
				button.btn.btn-inverse.btn-lg.socket(type="button", data-socket="arduino-led", data-value="0", data-id="#{item._id}", class=(item.value == 0 ? 'active' : '')) 
					i.fa.fa-circle-o
					| Off
