div.container
	h1 Settings
	h2 Holiday
	- if (typeof(success) !== 'undefined')
		div.alert.alert-success.fade.in
			button.close(type="button", data-dismiss="alert") Ã—
			=success
	div.row
		form(action="/settings/holiday", method="post")
			div#holiday
				div#time-slider-container
					div#time-scale-container
						table#time-scale
							tbody
								tr
									- for(var x = 0; x <= 23; x++)
										td #{x}
											span :00
					div#time-slider-1
					div#time-slider-2
						div#time-scale-twilight
						div#time-scale-twilight-2
						div#time-scale-sunlight
						div#time-scale-sunlight-2
				div#floater
					div.plugin-container.pull-left#inputs
						each item, i in items
							label(for="active") If the holiday module is active
								input(type="checkbox", checked=item.active, id="active", name="data[0][active]", style="margin-left:5px;margin-top:0px;")

							if !item.lat && !item.lng
								div.alert choose your location
							label(for="yourass") Latitude and Longitude
							input(type="text", readonly="readonly", name="data[0][lat]", id="lat", placeholder="50.9910159", value=(item.lat ? item.lat : ''))
							input(type="text", readonly="readonly", name="data[0][lng]", id="lng", placeholder="7.162471099999948", value=(item.lng ? item.lng : ''))

							label(for="sensor") Light Sensor (only sensors with graphing are listed)
							select(name="data[0][sensor]", required="1")
								each sensor, y in meta.sensors
									option(value=sensor._id) #{sensor.description}

							label(for="on") Value for turn light on:
							input.uppercase(type="text", name="data[0][on]", placeholder="250", maxlength="3", required="1", value=(item.on ? item.on : ''), pattern="^[0-9]{3}$")
							label(for="offtime") Time when the light should go off:
							input.uppercase(type="text", name="data[0][off]", placeholder="23:30-23:59", maxlength="11", required="1", value=(item.off ? item.off : ''), pattern="^[0-9]{2}:[0-9]{2}-[0-9]{2}:[0-9]{2}$")
							div.plugin-container.actors
								ul.list
								each actor, y in meta.actors
									li(style="list-style:none")
										input.pull-left(type="checkbox", name="data[0][actors][#{actor._id}]", checked=actor.active)
										label.pull-left(for="data[0][actors][#{actor._id}]",style="margin-left:5px;") #{actor.description}
										div.clearfix

						input(type="hidden", name="iterator", id="iterator", value=1)
						button.btn.btn-success.save(type="submit") 
							i.icon-save.icon-large
								|  Save
		div.pull.left#map
			div#panel
				input.search-query(type="text",placeholder="Search for your City",id="address")
			div#map-canvas
		div.clearfix